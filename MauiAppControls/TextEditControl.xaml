<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppControls.TextEditControl"
             Title="TextEditControl">
    <VerticalStackLayout Padding="10" BackgroundColor="Aquamarine">
        <Label Text="Entry example"></Label>
        <Entry x:Name="entry1"  BackgroundColor="White" Placeholder="Please entry text"
          TextChanged="entry1_TextChanged"  ></Entry>
        <Label x:Name="entryValueLabel" Text=""></Label>


        <Label Text="Editor example"></Label>
        <Editor x:Name="editor1" Placeholder="Enter text multiple line" BackgroundColor="White"
         TextChanged="editor1_TextChanged" ></Editor>
        <Label x:Name="editorValueLabel" Text="" ></Label>

    </VerticalStackLayout>
</ContentPage>